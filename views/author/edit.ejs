<h1>Edit Author</h1>

<form method="post" action="/authors/<%= author._id%>?_method=PUT">
    <div>
        <label>Name</label>
    </div>
    <div>
        <input type="text" name="name" value="<%= author.name %>"/> 
    </div>
    <div>
        <label>Bio</label> 
    </div>
    <div>
        <textarea name="bio"><%= author.bio %></textarea>
    </div>
    <div>
        <label>Gender</label>
    </div>
    <div>
        <select name="gender">
            <option value="<%= author.gender%>" hidden selected><%= author.gender %></option>
            <option value="male">male</option>
            <option value="female">female</option>
            <option value="non binary">non binary</option>
        </select>
    </div>
    <div>
        <input type="submit" value="Submit Form" />
    </div>
</form>